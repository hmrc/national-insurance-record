<endpoint>
    <name>Hello World</name>
    <description>Returns a Hello World message</description>
    <section id="resource">
        <title>Resource</title>
        <resource>GET /hello-world</resource>
    </section>
    <section id="authorisation">
        <title>Authorisation</title>
        <authorisation>
            <type>NONE</type>
            <scope>read:state-pension</scope>
        </authorisation>
    </section>
    <section id="content-types">
        <title>Accepted Media Types</title>
        <list>
            <item>
                <code>application/vnd.hmrc.1.0+json</code>
            </item>
        </list>
    </section>
    <section id="response">
        <title>Response</title>
        <httpStatus>200 (OK)</httpStatus>
        <json><![CDATA[
        {
           "message":"Hello World"
        }
    }]]></json>
    </section>
</endpoint>