{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "halLinks": {
      "type": "object",
      "properties": {
        "self": {
          "type": "object",
          "properties": {
            "href": {
              "type": "string"
            }
          },
          "required": ["href"]
        }
      },
      "required": ["self"]
    },
    "taxYear": {
      "description": "The tax year in format YYYY-YY",
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}$"
    },
    "iso8601Date": {
      "description": "Date in the format YYYY-MM-DD",
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    }
  }
}
